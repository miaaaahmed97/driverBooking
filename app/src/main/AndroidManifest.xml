<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rasai.driverBooking">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- when application is ready to be release
    1. set allowBackup="true"
    2. remove fullBackupContent-->
    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TripTabsActivity.AssignedTrips.ViewAssignedTrips"></activity>
        <activity android:name=".TripTabsActivity.TripTabsActivity" />
        <activity android:name=".TripTabsActivity.TripOffers.MakeOffer" />
        <activity android:name=".DriverHome" />
        <activity android:name=".Registration.SecurityDepositUpload" />
        <activity android:name=".Registration.driverRegistration2" />
        <activity android:name=".Registration.vehicleRegistration" />
        <activity android:name=".Registration.DriverRegistration" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileDisplay">

        </activity>
    </application>

</manifest>