<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/noAssignedTripsLayout"
        android:visibility="gone"
        android:drawableTop="@drawable/wait_sad_circle"
        android:drawablePadding="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:paddingLeft="@dimen/desc_padding"
        android:paddingRight="@dimen/desc_padding"
        android:text="Have you made an offer? Wait for the customer to accept it and we'll send you a notification."
        android:textAlignment="center"
        android:textColor="@color/darkgrey"
        android:textSize="16sp" />

    <ListView
    android:id="@+id/assigned_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@null"
    android:dividerHeight="0dp"/>

</LinearLayout>