<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TripTabsActivity.AssignedTrips.ViewAssignedTrips"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="Rate your Customer!"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="4.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:text="How was your experience?\n(Optional)" />

    <EditText
        android:id="@+id/userReviewDetails"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:hint="Please tell us in a few words what you liked"
        android:minLines="7"
        android:maxLines="8"
        android:textSize="16sp"
        android:background="@color/white"
        android:gravity="start"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submitReviewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_margin="16dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="@color/colorPrimary"
        android:focusableInTouchMode="false"
        android:padding="16dp"
        android:text="Submit"
        tools:targetApi="lollipop" />

</LinearLayout>
