<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TripTabsActivity.TripOffers.MakeOffer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView

            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <View
                        android:id="@+id/line"
                        android:layout_width="5dp"
                        android:layout_height="0dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@id/location1"
                        android:layout_alignBottom="@id/location2"
                        android:background="@color/colorAccent"
                        android:layout_marginBottom="0dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/location1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_location"
                        android:layout_margin="8dp"
                        android:layout_toRightOf="@id/line"
                        android:layout_toEndOf="@id/line" />

                    <TextView
                        android:id="@+id/fromCd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_margin="8dp"
                        android:text="Islamabad"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"
                        android:layout_toRightOf="@id/location1"
                        android:layout_alignBaseline="@id/location1"
                        android:layout_toEndOf="@id/location1"
                        tools:ignore="UnusedAttribute" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/location2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/ic_location"
                        android:layout_margin="8dp"
                        android:layout_toRightOf="@id/line"
                        android:layout_below="@id/location1"
                        android:layout_toEndOf="@id/line" />

                    <TextView
                        android:id="@+id/toCd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_margin="8dp"
                        android:text="Murree"
                        android:layout_toRightOf="@id/location2"
                        android:layout_below="@id/fromCd"
                        android:layout_toEndOf="@id/location2" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dfdfdf"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="0dp"
                        android:layout_below="@id/toCd"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/black"
                        app:srcCompat="@drawable/ic_calendar"
                        android:layout_below="@id/line2"
                        android:layout_toRightOf="@id/line"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@id/line" />

                    <TextView
                        android:id="@+id/fromText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/calendar"
                        android:layout_toEndOf="@id/calendar"
                        android:layout_below="@id/line2"
                        android:text="From : "
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/startDateCd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toRightOf="@id/fromText"
                        android:layout_toEndOf="@id/fromText"
                        android:layout_below="@id/line2"
                        android:textColor="@color/black"
                        android:text="17 July 2019"
                        android:padding="2dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/startTimeCd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toRightOf="@id/startDateCd"
                        android:layout_toEndOf="@id/startDateCd"
                        android:layout_below="@id/line2"
                        android:textColor="@color/black"
                        android:padding="2dp"
                        android:text="10:40 AM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:id="@+id/toLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_toRightOf="@id/line"
                        android:layout_toEndOf="@id/line"
                        android:layout_below="@id/calendar">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/black"
                            app:srcCompat="@drawable/ic_calendar"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/toText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="To : "
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/endDateCd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:text="18 July 2019"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/endTimeCd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:text="10:40 PM"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <View
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dfdfdf"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="0dp"
                        android:layout_below="@id/toLL"/>

                    <LinearLayout
                        android:id="@+id/PKRLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignLeft="@id/calendar"
                        android:layout_alignStart="@id/calendar"
                        android:layout_below="@id/line3"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PKR  "
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/budgetMinCd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="3000"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text=" - " />

                        <TextView
                            android:id="@+id/budgetMaxCd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="4500" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/returnCd"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/PKRLL"
                        android:layout_alignStart="@id/PKRLL"
                        android:gravity="center"
                        android:text="Return: yes "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_alignLeft="@id/PKRLL" />

                    <TextView
                        android:id="@+id/familyOrFriendsCd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/returnCd"
                        android:layout_alignStart="@id/returnCd"
                        android:layout_below="@id/returnCd"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Family Trip"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/seatsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Seats: "
                        android:layout_alignStart="@id/familyOrFriendsCd"
                        android:layout_alignLeft="@id/familyOrFriendsCd"
                        android:layout_below="@id/familyOrFriendsCd"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/numSeatsCd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/seatsText"
                        android:layout_alignBaseline="@id/seatsText"
                        android:layout_below="@id/familyOrFriendsCd"
                        android:text="8"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_toEndOf="@id/seatsText" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dfdfdf"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="0dp"
                        android:layout_below="@id/seatsText"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text="Additional Details"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/additionalDetailsCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:paddingTop="20sp"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:text="No extra details"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dfdfdf"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="0dp"/>

                <LinearLayout
                    android:id="@+id/makeOfferLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:focusableInTouchMode="true"
                        android:hint="Your budget e.g. 4500">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/offeredBudget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="16sp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/makeOfferButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="make offer"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/changeBudgetButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="change budget"
                        android:layout_margin="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        android:onClick="changeBudgetOffer"/>

                    <Button
                        android:id="@+id/doneBudgetButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="done"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        android:onClick="doneOffer"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/messageLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom|center"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This trip is no longer available. The user may have deleted this trip or assigned it to someone else."
                        android:textColor="@color/colorAccent"/>

                    <Button
                        android:id="@+id/deleteOfferButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="end|bottom"
                        android:text="Delete Offer"
                        android:layout_margin="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"/>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>