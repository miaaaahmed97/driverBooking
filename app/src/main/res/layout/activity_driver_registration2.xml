<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Registration.driverRegistration2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="24dp"
            android:text="Please click on the button to upload an image. These will be used for identification purposes."
            android:textColor="@color/black"
            android:gravity="center"
            />

        <Button
            android:id="@+id/addIDPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="Add ID Picture"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/darkgrey2"
            app:backgroundTint="@color/darkgrey2"
            android:elevation="5dp"
            tools:ignore="UnusedAttribute" />

        <Button
            android:id="@+id/addCnic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="Add CNIC Picture"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:elevation="5dp"
            android:backgroundTint="@color/darkgrey2"
            app:backgroundTint="@color/darkgrey2"
            tools:ignore="UnusedAttribute" />

        <Button
            android:id="@+id/addDrivingLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="Add Driving License"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:elevation="5dp"
            android:backgroundTint="@color/darkgrey2"
            app:backgroundTint="@color/darkgrey2"
            style="@style/Widget.AppCompat.Button.Colored"
            tools:ignore="UnusedAttribute" />


    </LinearLayout>

    <Button
        android:id="@+id/registerDriverButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="register"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Button.Colored"/>

</LinearLayout>