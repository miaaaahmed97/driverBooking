<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
        android:layout_marginRight="@dimen/cardview_default_elevation"
        android:layout_marginBottom="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
        android:layout_marginEnd="@dimen/cardview_default_elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="2dp"
                >

                <TextView
                    android:id="@+id/startDateCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="0dp"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:text="17 July"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/startTimeCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:text="10 AM"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/toText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:text="to "
                    android:textSize="14sp"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/endDateCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="0dp"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:text="18 July"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:layout_marginStart="2dp" />

                <TextView
                    android:id="@+id/endTimeCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:text="10 PM"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:padding="2dp"
                android:layout_marginEnd="50dp">

                <TextView
                    android:id="@+id/fromCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="Islamabad"
                    android:layout_marginStart="2dp" />

                <TextView
                    android:id="@+id/toText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="to" />

                <TextView
                    android:id="@+id/toCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="Murree" />

                <TextView
                    android:id="@+id/returnCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:text=" Return "
                    android:paddingStart="10sp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:padding="2dp"
                android:layout_marginEnd="50dp">

                <TextView
                    android:id="@+id/familyOrFriendsCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:text="Family"
                    android:paddingStart="10sp" />


                <TextView
                    android:id="@+id/PKRText"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_marginRight="5dp"
                    android:text="PKR"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/offerMadeCd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4500" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>