<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
        android:layout_marginRight="@dimen/cardview_default_elevation"
        android:layout_marginBottom="@dimen/cardview_default_elevation"
        android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
        android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
        android:layout_marginEnd="@dimen/cardview_default_elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="4dp">

                <TextView
                    android:id="@+id/startDateCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="17 July 2019"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/startTimeCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="10:40 AM"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/toText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:text=" - "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:id="@+id/endDateCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="18 July 2019"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/endTimeCd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2sp"
                    android:paddingRight="2sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="10:40 PM"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <RelativeLayout
            android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@id/LL1"
                    android:layout_alignBottom="@id/LL1"
                    android:background="@color/colorAccent"
                    android:layout_marginBottom="0dp" />

                <LinearLayout
                    android:id="@+id/LL1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:padding="4dp"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/fromCd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="Islamabad"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>

                    <!--<TextView
                        android:id="@+id/toText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=" to " />-->

                    <TextView
                        android:id="@+id/toCd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="Murree" />



                    <!--<TextView
                        android:id="@+id/familyOrFriendsCd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="10sp"
                        android:text="Family" />-->


                </LinearLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dfdfdf"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_below="@id/LL1"
                    />

                <LinearLayout
                    android:layout_below="@id/line"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/returnCd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="2"
                        android:text=" Return " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:text="PKR "
                        android:paddingEnd="2dp"
                        android:paddingStart="15dp" />
                    <TextView
                        android:id="@+id/offerMadeCd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_weight="1"
                        tools:text="3000" />

                    <TextView
                        android:id="@+id/familyOrFriendsCd"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_weight="2"
                        android:text="Family" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>