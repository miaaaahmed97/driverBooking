<resources>

    <!-- Base application theme. <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar"></style>


    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:typeface">monospace</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textViewStyle">@style/RobotoTextViewStyle</item>-->

    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MyToolbarTheme"
        parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

</resources>